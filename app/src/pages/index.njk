{% extends "layouts/app.layout.njk" %}

{% block content %}

    <div class="container-fluid d-flex flex-column" id="Hero">
        {% include "partials/navbar.partial.njk" %}

        {% include "partials/login.partial.njk" %}

        {% include "sections/hero.section.njk" %}
    </div>

    <div class="container-fluid py-5" id="Company">

        {% include "sections/company.section.njk" %}
        
    </div>
    
    <div class="container-fluid p-0" id="Product">

        {% include "sections/product.section.njk" %}
        
    </div>

    <div class="section-gallery container-fluid py-5" id="Gallery">
        {% include "sections/gallery.section.njk" %}
    </div>

    <div class="section-achievers container-fluid py-5" id="Achievers">
        {% include "sections/achievers.section.njk" %}
    </div>

    <div class="section-contact container-fluid py-5" id="Contact">
        {% include "sections/contact.section.njk" %}
    </div>
    
    <footer id="footer" class="container-fluid footer py-5">
        {% include "partials/footer.partial.njk" %}
    </footer>

    <div class="copyright container-fluid p-4">
        <div class="row justify-content-space-between align-items-center">
            <div class="col-md-4 text-center order-3 order-md-1 text-md-left" data-aos="flip-up" data-aos-offset="0">
                Copyright &copy; 2019 <a href="{{app.details.companyUrl}}">{{app.details.company}}</a>. <wbr> All rights reserved
            </div>
            <div class="col-md-4 order-1 order-md-2 text-center pb-4 pb-md-0" data-aos="flip-up" data-aos-offset="0">
                <a href="{{app.social.facebook}}" class="social-link" >
                    <i class="fab fa-facebook"></i>
                </a>
                <a href="{{app.social.twitter}}" class="social-link">
                    <i class="fab fa-twitter"></i>
                </a>
                <a href="{{app.social.instagram}}" class="social-link">
                    <i class="fab fa-instagram"></i>
                </a>
            </div>
            <div class="col-md-4 order-2 order-md-3 text-center text-md-right" data-aos="flip-up" data-aos-offset="0">
                Hand-crafted &amp; made with <i class="fa fa-heart text-danger"></i>
            </div>
        </div>
    </div>
{% endblock %}